<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
	<event name='sales_order_save_after'>
		<observer name='bss_checkoutcustomfield_save_to_order' instance='Bss\CheckoutCustomField\Model\Observer\Adminhtml\SaveOrder'
		/>
	</event>
	<event name='checkout_submit_all_after'>
		<observer name='bss_checkoutcustomfield_save_to_order_gird' instance='Bss\CheckoutCustomField\Model\Observer\Adminhtml\SaveOrderGird'
		/>
	</event>
	<event name="bss_customfield_create">
		<observer name="bss_customfield_create" instance="Bss\CheckoutCustomField\Model\Observer\AddColumn" />
	</event>
	<event name="bss_customfield_delete">
		<observer name="bss_customfield_delete" instance="Bss\CheckoutCustomField\Model\Observer\DelColumn" />
	</event>
</config>
