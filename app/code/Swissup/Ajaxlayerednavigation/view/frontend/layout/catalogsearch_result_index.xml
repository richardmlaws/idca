<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Swissup_Ajaxlayerednavigation::css/ajaxlayerednavigation.css"/>
    </head>
    <body>
        <referenceBlock name="catalogsearch.leftnav">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Swissup_Ajaxlayerednavigation::layer/view.phtml</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="catalogsearch.navigation.renderer">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Swissup_Ajaxlayerednavigation::layer/filter.phtml</argument>
            </action>
        </referenceBlock>

        <move element="catalogsearch.navigation.state" destination="content.top" after="-"/>
    </body>
</page>
