            <div class="swissup-filter-item-checkbox">
                <input type="checkbox" class="swissup-layered-checkbox" <?php echo $checked ?>>
                <div class="swissup-content"></div>
            </div>
            <a class="swissup-aln-item" href="<?php echo $block->escapeUrl($url) ?>">
                <?php /* @escapeNotVerified */ echo $filterItem->getLabel() ?>
