                    <span class="count swissup-option-count <?php echo $countStyle ?>">
                    <?php /* @escapeNotVerified */ echo $plus . $filterItem->getCount() ?></span>
                <?php endif; ?>
            </a>
        </li>
    <?php endforeach ?>
