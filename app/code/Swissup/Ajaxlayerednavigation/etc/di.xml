<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Swatches\Block\LayeredNavigation\RenderLayered" type="Swissup\Ajaxlayerednavigation\Block\Navigation\RenderLayered" />
    <preference for="Magento\LayeredNavigation\Block\Navigation\State" type="Swissup\Ajaxlayerednavigation\Block\Navigation\State" />

    <virtualType name="categoryFilterList" type="Magento\Catalog\Model\Layer\FilterList">
        <arguments>
            <argument name="filters" xsi:type="array">
                <item name="attribute" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Attribute</item>
                <item name="price" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Price</item>
                <item name="decimal" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Decimal</item>
                <item name="category" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Category</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="searchFilterList" type="Magento\Catalog\Model\Layer\FilterList">
        <arguments>
            <argument name="filters" xsi:type="array">
                <item name="attribute" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Attribute</item>
                <item name="price" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Price</item>
                <item name="decimal" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Decimal</item>
                <item name="category" xsi:type="string">Swissup\Ajaxlayerednavigation\Model\Layer\Filter\Category</item>
            </argument>
        </arguments>
    </virtualType>
</config>
