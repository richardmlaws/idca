<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route url="/V1/sagepaycw/transactions/:id" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/payment-id/:id" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionRepositoryInterface" method="getByPaymentId"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/order-id/:id" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionRepositoryInterface" method="getByOrderId"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/:id" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/:id/status" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionManagementInterface" method="getStatus"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/:id/update" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionManagementInterface" method="update"/>
        <resources>
            <resource ref="Customweb_SagePayCw::transactions" />
        </resources>
    </route>
    <route url="/V1/sagepaycw/transactions/:id/delete-alias" method="GET">
        <service class="Customweb\SagePayCw\Api\TransactionManagementInterface" method="deleteAlias"/>
        <resources>
            <resource ref="Customweb_SagePayCw::customer_aliases" />
        </resources>
    </route>
</routes>